---
// src/layouts/StudentLayout.astro
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id" data-theme="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="LMS Siswa" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<title>{title}</title>
		
        <!-- Fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
        <!-- Icons -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
        <link rel="manifest" href="/manifest.json">
        <meta name="theme-color" content="#10b981">
	</head>
    
    <!-- Background abu-abu gelap di luar, konten putih di tengah -->
    <body class="bg-gray-100 font-sans min-h-screen flex justify-center items-start">
        
        <!-- Mobile Container Wrapper (Max Width ~480px) -->
        <main class="w-full max-w-[480px] bg-white min-h-screen shadow-2xl relative overflow-hidden">
            <slot />
        </main>

        <!-- Script Global (Auth Check) -->
        <script is:inline>
            // Cek Token sederhana
            const token = localStorage.getItem('token');
            const user = localStorage.getItem('user'); // Opsional jika nyimpan user data
            
            if (!token) {
                window.location.href = '/';
            }

            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(reg => console.log('SW Registered!', reg))
                    .catch(err => console.log('SW Failed', err));
                });
            }
        </script>
	</body>
</html>