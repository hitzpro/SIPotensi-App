---
// src/pages/guru/kelas/[classId]/tugas/[taskId].astro
export const prerender = false;

import Layout from '../../../../../layouts/Layout.astro';
import Navbar from '../../../../../components/ui/Navbar.astro';
import ToastSystem from '../../../../../components/ui/ToastSystem.astro';
import AlertSystem from '../../../../../components/ui/AlertSystem.astro';

const { classId, taskId } = Astro.params;
if (!classId || !taskId) return Astro.redirect('/guru');
---

<Layout title="Detail Tugas">
    <ToastSystem />
    <AlertSystem />
    <Navbar />
    
    <main id="main-content" data-class-id={classId} data-task-id={taskId} class="container mx-auto px-4 py-8 max-w-6xl pb-32">
        
        <div class="flex items-start gap-4 mb-6">
            <a href="/guru/data-kelas" class="btn btn-circle btn-ghost btn-sm border border-gray-300 mt-1 hover:bg-gray-100 transition-colors">
                <i class="fa-solid fa-arrow-left text-gray-600"></i>
            </a>
            <div class="w-full">
                <h1 id="task-title" class="text-2xl font-bold text-gray-800 skeleton w-1/2 h-8 rounded block"></h1>
                
                <div id="task-meta-container" class="mt-2 text-sm text-gray-500 space-y-1 hidden animate-fade-in">
                    <div class="flex flex-wrap items-center gap-2">
                        <span class="badge badge-ghost badge-sm uppercase font-bold text-xs" id="badge-jenis">TYPE</span>
                        <span class="text-gray-300 hidden sm:inline">|</span>
                        <span class="flex items-center gap-1 bg-gray-50 px-2 py-0.5 rounded border border-gray-100">
                            <i class="fa-regular fa-clock text-gray-400"></i> 
                            <span class="text-xs text-gray-500">Deadline:</span>
                            <span id="text-deadline" class="font-bold text-gray-700 text-xs">-</span>
                        </span>
                    </div>
                </div>
                <div id="task-meta-skeleton" class="mt-2 skeleton w-1/3 h-4 rounded"></div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            
            <div class="card bg-white border border-gray-200 shadow-sm h-fit rounded-xl overflow-hidden">
                <div class="card-body p-5">
                    <div class="flex justify-between items-center mb-3">
                        <h3 class="font-bold text-lg text-gray-800 flex items-center gap-2">
                            <i class="fa-regular fa-file-lines text-primary"></i> Detail Soal
                        </h3>
                        <button onclick="openEditModal()" class="btn btn-xs btn-ghost text-warning border border-gray-200 hover:bg-yellow-50 hover:border-yellow-200 transition-all">
                            <i class="fa-solid fa-pen"></i> <span class="hidden sm:inline ml-1">Edit</span>
                        </button>
                    </div>

                    <div class="bg-gray-50 p-4 rounded-xl border border-gray-100 text-sm text-gray-700 whitespace-pre-wrap min-h-[80px]" id="info-desc">
                        -
                    </div>

                    <div class="divider my-4"></div>

                    <div id="preview-soal-area">
                        <div class="flex flex-col items-center justify-center py-8 text-gray-400 gap-2">
                            <span class="loading loading-spinner loading-sm"></span> 
                            <span class="text-xs">Memuat konten...</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2 card bg-white border border-gray-200 shadow-sm rounded-xl overflow-hidden">
                <div class="card-body p-0">
                    <div class="p-4 border-b border-gray-100 bg-gray-50/50 flex justify-between items-center sticky top-0 z-10">
                        <h3 class="font-bold text-gray-800 flex items-center gap-2">
                            <i class="fa-solid fa-users-viewfinder text-blue-500"></i> Jawaban Siswa
                        </h3>
                        <div class="badge badge-primary badge-lg shadow-sm" id="submission-count">0</div>
                    </div>
                    
                    <div class="overflow-x-auto max-h-[600px] custom-scrollbar">
                        <table class="table table-zebra w-full table-pin-rows">
                            <thead class="bg-gray-100 text-xs uppercase text-gray-500 font-bold sticky top-0 z-20">
                                <tr>
                                    <th>Siswa</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Nilai</th>
                                    <th class="text-center w-20">Aksi</th>
                                </tr>
                            </thead>
                            <tbody id="submission-body" class="text-sm"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <dialog id="modal_edit_task" class="modal modal-bottom sm:modal-middle backdrop-blur-sm">
        <div class="modal-box w-full sm:max-w-lg p-0 rounded-t-2xl sm:rounded-2xl bg-white shadow-xl overflow-hidden">
            <div class="p-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
                <h3 class="font-bold text-lg">Edit Tugas</h3>
                <button type="button" class="btn btn-sm btn-circle btn-ghost" onclick="document.getElementById('modal_edit_task').close()">✕</button>
            </div>
            
            <form id="form-edit-task" class="p-5 space-y-4 max-h-[70vh] overflow-y-auto">
                <div class="form-control">
                    <label class="label font-bold text-gray-600 text-xs uppercase">Judul Tugas</label>
                    <input type="text" name="nama_tugas" id="edit-nama" class="input input-bordered w-full focus:input-primary" required />
                </div>
                <div class="form-control">
                    <label class="label font-bold text-gray-600 text-xs uppercase">Deadline</label>
                    <input type="datetime-local" name="deadline" id="edit-deadline" class="input input-bordered w-full focus:input-primary" required />
                </div>
                <div class="form-control">
                    <label class="label font-bold text-gray-600 text-xs uppercase">Deskripsi</label>
                    <textarea name="deskripsi" id="edit-deskripsi" class="textarea textarea-bordered h-24 focus:textarea-primary"></textarea>
                </div>
                
                <div class="form-control bg-blue-50 p-3 rounded-lg border border-blue-100 hidden" id="edit-file-container">
                    <label class="label font-bold text-blue-800 text-xs uppercase">Update File Soal</label>
                    <input type="file" name="file_soal" accept=".pdf,.jpg,.png" class="file-input file-input-bordered file-input-primary w-full file-input-sm bg-white" />
                    <label class="label text-[10px] text-blue-400">Biarkan kosong jika tidak ingin mengubah file.</label>
                </div>

                <div class="pt-2">
                    <button type="submit" class="btn btn-primary w-full text-white shadow-md">Simpan Perubahan</button>
                </div>
            </form>
        </div>
        <form method="dialog" class="modal-backdrop"><button>close</button></form>
    </dialog>

    <dialog id="modal_preview" class="modal modal-bottom sm:modal-middle backdrop-blur-md">
        <div class="modal-box w-full h-[90vh] sm:h-[85vh] sm:w-11/12 max-w-5xl flex flex-col p-0 bg-white rounded-t-2xl sm:rounded-2xl shadow-2xl overflow-hidden mx-auto">
            
            <div class="bg-white p-3 px-4 border-b border-gray-200 flex justify-between items-center sticky top-0 z-50 shrink-0 shadow-sm">
                <div class="flex items-center gap-2 text-gray-700">
                    <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                        <i class="fa-regular fa-eye"></i>
                    </div>
                    <h3 class="font-bold text-lg">Preview File</h3>
                </div>
                <form method="dialog">
                    <button class="btn btn-sm btn-circle btn-ghost bg-gray-100 hover:bg-gray-200 border-none transition-colors">✕</button>
                </form>
            </div>
            
            <div id="preview-content" class="flex-1 w-full bg-gray-50 relative p-2 sm:p-4 overflow-hidden">
                </div>
        </div>
        <form method="dialog" class="modal-backdrop"><button>close</button></form>
    </dialog>

</Layout>

<style>
    .animate-fade-in { animation: fadeIn 0.3s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }
    
    .custom-scrollbar::-webkit-scrollbar { width: 6px; height: 6px; }
    .custom-scrollbar::-webkit-scrollbar-track { background: #f1f1f1; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background: #d1d5db; border-radius: 10px; }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #9ca3af; }
</style>

<script src="../../../../../scripts/pages/guru/tugas-detail.js"></script>