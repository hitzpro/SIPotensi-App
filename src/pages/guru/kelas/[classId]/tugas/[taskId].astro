---
// src/pages/guru/kelas/[classId]/tugas/[taskId].astro
export const prerender = false;

import Layout from '../../../../../layouts/Layout.astro';
import Navbar from '../../../../../components/ui/Navbar.astro';
import ToastSystem from '../../../../../components/ui/ToastSystem.astro';
import AlertSystem from '../../../../../components/ui/AlertSystem.astro';

const { classId, taskId } = Astro.params;
if (!classId || !taskId) return Astro.redirect('/guru');
---

<Layout title="Detail Tugas">
    <ToastSystem />
    <AlertSystem />
    <Navbar />
    
    
    <main id="main-content" data-class-id={classId} data-task-id={taskId} class="container mx-auto px-4 py-8 max-w-6xl pb-32">
        
        <div class="flex items-start gap-4 mb-6">
            <a href="/guru/data-kelas" class="btn btn-circle btn-ghost btn-sm border border-gray-300 mt-1">
                <i class="fa-solid fa-arrow-left"></i>
            </a>
            <div class="w-full">
                <h1 id="task-title" class="text-2xl font-bold text-gray-800 skeleton w-1/2 h-8 rounded block"></h1>
                
                <div id="task-meta-container" class="mt-2 text-sm text-gray-500 space-y-1 hidden">
                    <div class="flex items-center gap-2">
                        <span class="badge badge-ghost badge-sm uppercase font-bold" id="badge-jenis">TYPE</span>
                        <span class="text-gray-400">|</span>
                        <span><i class="fa-regular fa-clock"></i> Deadline: <span id="text-deadline" class="font-medium text-gray-700">-</span></span>
                    </div>
                    <div class="text-xs text-gray-400 font-mono break-all">
                        Class ID: {classId}
                    </div>
                </div>
                <div id="task-meta-skeleton" class="mt-2 skeleton w-1/3 h-4 rounded"></div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            
            <div class="card bg-base-100 border border-gray-200 shadow-sm h-fit">
                <div class="card-body">
                    <div class="flex justify-between items-center mb-2">
                        <h3 class="font-bold text-lg">Detail Soal</h3>
                        <button onclick="openEditModal()" class="btn btn-xs btn-ghost text-warning border border-gray-200">
                            <i class="fa-solid fa-pen"></i> Edit Info
                        </button>
                    </div>

                    <div class="bg-gray-50 p-3 rounded-lg text-sm text-gray-700 whitespace-pre-wrap min-h-[80px]" id="info-desc">
                        -
                    </div>

                    <div class="divider my-2"></div>

                    <div id="preview-soal-area">
                        <span class="loading loading-spinner loading-sm text-gray-400"></span> Memuat soal...
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2 card bg-base-100 border border-gray-200 shadow-sm">
                <div class="card-body p-0">
                    <div class="p-4 border-b flex justify-between items-center bg-gray-50">
                        <h3 class="font-bold">Jawaban Siswa</h3>
                        <div class="badge badge-primary" id="submission-count">0</div>
                    </div>
                    
                    <div class="overflow-x-auto max-h-[600px]">
                        <table class="table table-zebra w-full table-pin-rows">
                            <thead>
                                <tr>
                                    <th>Siswa</th>
                                    <th>Status</th>
                                    <th>Nilai</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody id="submission-body"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <dialog id="modal_edit_task" class="modal modal-bottom sm:modal-middle">
        <div class="modal-box">
            <h3 class="font-bold text-lg mb-4">Edit Informasi Tugas</h3>
            <form id="form-edit-task" class="space-y-4">
                <div class="form-control">
                    <label class="label font-semibold">Judul Tugas</label>
                    <input type="text" name="nama_tugas" id="edit-nama" class="input input-bordered" required />
                </div>
                <div class="form-control">
                    <label class="label font-semibold">Deadline</label>
                    <input type="datetime-local" name="deadline" id="edit-deadline" class="input input-bordered" required />
                </div>
                <div class="form-control">
                    <label class="label font-semibold">Deskripsi</label>
                    <textarea name="deskripsi" id="edit-deskripsi" class="textarea textarea-bordered h-24"></textarea>
                </div>
                
                <div class="form-control" id="edit-file-container">
                    <label class="label font-semibold">Update File Soal (Opsional)</label>
                    <input type="file" name="file_soal" accept=".pdf,.jpg,.png" class="file-input file-input-bordered w-full file-input-sm" />
                    <label class="label text-xs text-gray-400">Biarkan kosong jika tidak ingin mengubah file.</label>
                </div>

                <div class="modal-action">
                    <button type="button" class="btn btn-ghost" onclick="document.getElementById('modal_edit_task').close()">Batal</button>
                    <button type="submit" class="btn btn-primary text-white">Simpan Perubahan</button>
                </div>
            </form>
        </div>
        <form method="dialog" class="modal-backdrop"><button>close</button></form>
    </dialog>

    <dialog id="modal_preview" class="modal modal-bottom sm:modal-middle">
        <div class="modal-box w-11/12 max-w-5xl h-[80vh]">
            <form method="dialog">
                <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
            </form>
            
            <h3 class="font-bold text-lg mb-2">Preview File</h3>
            
            <div id="preview-content" class="h-full w-full flex justify-center items-center bg-gray-100 rounded-lg overflow-hidden border">
                </div>
        </div>
    </dialog>

</Layout>

<script src="../../../../../scripts/pages/guru/tugas-detail.js"></script>