---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import FormInput from '../../../components/ui/FormInput.astro';
---

<AdminLayout title="Kirim Dokumen">
    
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Kirim Dokumen</h1>
        <p class="text-gray-500 text-sm">Upload file dan bagikan ke guru melalui notifikasi.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        
        <div class="lg:col-span-2 space-y-6">
            <div class="card bg-white shadow-sm border border-gray-200">
                <div class="card-body">
                    <form id="form-broadcast" class="space-y-4">
                        
                        <div class="form-control w-full">
                            <label class="label font-bold text-gray-700">File Dokumen</label>
                            <div class="border-2 border-dashed border-gray-300 rounded-xl p-8 text-center hover:bg-gray-50 transition-colors relative cursor-pointer group">
                                <input type="file" id="file-input" name="file" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" required />
                                <div class="flex flex-col items-center gap-2" id="file-preview-area">
                                    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center text-primary group-hover:scale-110 transition-transform">
                                        <i class="fa-solid fa-cloud-arrow-up text-xl"></i>
                                    </div>
                                    <span class="text-sm font-medium text-gray-600">Klik atau tarik file ke sini</span>
                                    <span class="text-xs text-gray-400">PDF, CSV, Docx, Xlsx (Max 5MB)</span>
                                </div>
                                <div id="file-name-display" class="hidden flex-col items-center gap-1 animate-fade-in">
                                    <i class="fa-solid fa-file-lines text-3xl text-primary"></i>
                                    <span class="text-sm font-bold text-gray-800 mt-2" id="file-name-text">filename.pdf</span>
                                    <span class="text-xs text-blue-600 hover:underline cursor-pointer">Ganti File</span>
                                </div>
                            </div>
                        </div>

                        <FormInput id="judul" name="judul" label="Judul Notifikasi" placeholder="Cth: Jadwal Ujian Semester" required={true} />
                        
                        <div class="form-control">
                            <label class="label font-bold text-gray-700 text-xs uppercase">Pesan Tambahan</label>
                            <textarea id="pesan" name="pesan" class="textarea textarea-bordered h-24" placeholder="Silakan unduh dokumen ini untuk keperluan..."></textarea>
                        </div>

                        <div class="form-control">
                            <label class="label font-bold text-gray-700 text-xs uppercase">Penerima</label>
                            <div class="flex items-center gap-3 p-3 border border-gray-200 rounded-lg bg-gray-50">
                                <div class="w-10 h-10 rounded-full bg-secondary/20 flex items-center justify-center text-secondary">
                                    <i class="fa-solid fa-users"></i>
                                </div>
                                <div class="flex-1">
                                    <p class="text-sm font-bold text-gray-800" id="recipient-count">0 Guru Dipilih</p>
                                    <p class="text-xs text-gray-500">Klik tombol di kanan untuk memilih</p>
                                </div>
                                <button type="button" onclick="openRecipientModal()" class="btn btn-sm btn-outline border-gray-300 hover:bg-gray-100 hover:text-gray-800">
                                    Pilih Guru
                                </button>
                            </div>
                            <input type="hidden" id="selected-ids" name="target_ids" value="[]">
                        </div>

                        <div class="divider"></div>

                        <button type="submit" id="btn-send" class="btn btn-primary w-full text-white gap-2" disabled>
                            <i class="fa-solid fa-paper-plane"></i> Kirim Dokumen
                        </button>

                    </form>
                </div>
            </div>
        </div>

        <div class="lg:col-span-1 space-y-4">
            
            <div class="alert alert-info shadow-sm text-sm">
                <i class="fa-solid fa-circle-info"></i>
                <div>
                    <h3 class="font-bold">Info Pengiriman</h3>
                    <div class="text-xs">
                        Dokumen yang dikirim akan muncul di notifikasi Guru.
                    </div>
                </div>
            </div>

            <div id="history-accordion" class="collapse collapse-arrow bg-white border border-gray-200 shadow-sm rounded-xl">
                <input type="checkbox" id="history-toggle" /> 
                <div class="collapse-title text-base font-bold text-gray-800 flex items-center gap-2">
                    <i class="fa-solid fa-clock-rotate-left text-primary"></i> Riwayat Pengiriman
                </div>
                <div class="collapse-content px-0">
                    <div class="px-4 pb-3 border-b border-gray-100 flex flex-col gap-2">
                        <input type="text" id="history-search" placeholder="Cari dokumen..." class="input input-xs input-bordered w-full" />
                        <select id="history-month" class="select select-xs select-bordered w-full">
                            <option value="all">Semua Waktu</option>
                            <option value="0">Januari</option>
                            <option value="1">Februari</option>
                            <option value="2">Maret</option>
                            <option value="3">April</option>
                            <option value="4">Mei</option>
                            <option value="5">Juni</option>
                            <option value="6">Juli</option>
                            <option value="7">Agustus</option>
                            <option value="8">September</option>
                            <option value="9">Oktober</option>
                            <option value="10">November</option>
                            <option value="11">Desember</option>
                        </select>
                    </div>

                    <div id="history-list" class="max-h-[400px] overflow-y-auto p-2 space-y-1">
                        <div class="text-center py-6 text-xs text-gray-400">Memuat riwayat...</div>
                    </div>
                    
                    <div class="px-4 py-2 text-[10px] text-center text-gray-400 border-t border-gray-100">
                        Menampilkan <span id="history-count">0</span> data
                    </div>
                </div>
            </div>

        </div>
    </div>

    <dialog id="modal_recipient" class="modal">
        <div class="modal-box w-full max-w-lg h-[80vh] flex flex-col p-0 overflow-hidden bg-white">
            <div class="p-4 border-b border-gray-200 flex justify-between items-center bg-gray-50">
                <h3 class="font-bold text-lg text-gray-800">Pilih Penerima</h3>
                <form method="dialog"><button class="btn btn-sm btn-circle btn-ghost">✕</button></form>
            </div>
            <div class="p-4 border-b border-gray-200 space-y-3 bg-white">
                <div class="relative">
                    <i class="fa-solid fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input type="text" id="search-guru" placeholder="Cari nama guru..." class="input input-bordered input-sm w-full pl-9">
                </div>
                <div class="flex items-center justify-between">
                    <label class="label cursor-pointer gap-2 justify-start">
                        <input type="checkbox" id="check-all" class="checkbox checkbox-sm checkbox-primary" />
                        <span class="label-text font-bold text-gray-700">Pilih Semua</span>
                    </label>
                    <span class="text-xs text-gray-500 font-medium" id="total-guru-label">Total: 0</span>
                </div>
            </div>
            <div class="flex-1 overflow-y-auto p-4 space-y-1 bg-white" id="list-guru-container">
                <div class="text-center py-10 text-gray-400"><span class="loading loading-spinner"></span> Memuat data...</div>
            </div>
            <div class="p-4 border-t border-gray-200 bg-gray-50 flex justify-end gap-2">
                <form method="dialog"><button class="btn btn-ghost text-gray-600">Batal</button></form>
                <button onclick="saveSelection()" class="btn btn-primary text-white shadow-md">Simpan (<span id="btn-count">0</span>)</button>
            </div>
        </div>
    </dialog>

    <dialog id="modal_history_detail" class="modal modal-bottom sm:modal-middle">
        <div class="modal-box p-0">
            <div class="bg-primary text-white p-4 flex justify-between items-center">
                <h3 class="font-bold text-lg"><i class="fa-solid fa-clock-rotate-left mr-2"></i> Detail Pengiriman</h3>
                <form method="dialog"><button class="btn btn-sm btn-circle btn-ghost text-white">✕</button></form>
            </div>
            <div class="p-5">
                <div class="mb-4">
                    <h4 class="font-bold text-gray-800" id="detail-judul">-</h4>
                    <p class="text-xs text-gray-500 mt-1" id="detail-date">-</p>
                    <a href="#" target="_blank" id="detail-link" class="btn btn-xs btn-outline mt-2 gap-2"><i class="fa-solid fa-download"></i> Lihat File</a>
                </div>
                <div class="divider text-xs text-gray-400">Dikirim Kepada</div>
                <div class="bg-gray-50 rounded-lg p-2 max-h-60 overflow-y-auto border border-gray-100" id="detail-recipients">
                    <span class="loading loading-spinner loading-sm text-primary mx-auto block"></span>
                </div>
            </div>
        </div>
        <form method="dialog" class="modal-backdrop"><button>close</button></form>
    </dialog>

</AdminLayout>

<script>
    import { getData, postData } from '../../../scripts/utils/api.js';

    // --- STATE ---
    let allGurus = [];
    let selectedSet = new Set();
    let fileSelected = false;
    let historyData = []; // Store raw history

    // --- INITIALIZATION ---
    document.addEventListener('DOMContentLoaded', async () => {
        await Promise.all([fetchGurus(), fetchHistory()]);
        setupFileUpload();
        setupSearch();
        setupHistoryUI();
    });

    // --- HISTORY LOGIC ---
    async function fetchHistory() {
        try {
            const res = await getData('/admin/guru/history-doc');
            if(res.ok && res.data.data) {
                historyData = res.data.data;
                renderHistory(historyData.slice(0, 5)); // Default 5 latest
            }
        } catch(e) { console.error("History Error", e); }
    }

    function renderHistory(data) {
        const container = document.getElementById('history-list');
        document.getElementById('history-count').innerText = data.length;
        
        if(data.length === 0) {
            container.innerHTML = `<div class="text-center py-6 text-xs text-gray-400">Tidak ada riwayat.</div>`;
            return;
        }

        container.innerHTML = data.map(item => {
            const date = new Date(item.created_at);
            const dateStr = date.toLocaleDateString('id-ID', {day: 'numeric', month: 'short', year: '2-digit'});
            const recipientCount = item.recipients.length;
            
            // Encode data untuk onclick (hati-hati quote)
            const recipientsJson = JSON.stringify(item.recipients).replace(/"/g, '&quot;');

            return `
                <div onclick="openHistoryDetail('${item.judul}', '${item.created_at}', '${item.link_url}', '${recipientsJson}')" 
                     class="group flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 border border-transparent hover:border-gray-100 cursor-pointer transition-all">
                    <div class="flex items-center gap-3 overflow-hidden">
                        <div class="w-8 h-8 rounded-lg bg-emerald-50 text-emerald-600 flex items-center justify-center shrink-0 border border-emerald-100">
                            <i class="fa-solid fa-file-arrow-up text-xs"></i>
                        </div>
                        <div class="min-w-0">
                            <p class="text-xs font-bold text-gray-700 truncate group-hover:text-primary transition-colors">${item.judul}</p>
                            <p class="text-[10px] text-gray-400 flex items-center gap-1">
                                <i class="fa-regular fa-calendar"></i> ${dateStr}
                            </p>
                        </div>
                    </div>
                    <span class="badge badge-xs badge-ghost text-[10px]">${recipientCount} <i class="fa-solid fa-user ml-1 text-[8px]"></i></span>
                </div>
            `;
        }).join('');
    }

    function setupHistoryUI() {
        // 1. Accordion Default State (Desktop Open, Mobile Closed)
        const toggle = document.getElementById('history-toggle');
        if(window.innerWidth >= 1024) {
            toggle.checked = true; // Expanded on Desktop
        } else {
            toggle.checked = false; // Collapsed on Mobile
        }

        // 2. Filter & Search Logic
        const searchInput = document.getElementById('history-search');
        const monthSelect = document.getElementById('history-month');

        const applyFilter = () => {
            const term = searchInput.value.toLowerCase();
            const month = monthSelect.value;

            let filtered = historyData.filter(item => {
                const matchesTerm = item.judul.toLowerCase().includes(term);
                const itemDate = new Date(item.created_at);
                const matchesMonth = month === 'all' || itemDate.getMonth().toString() === month;
                return matchesTerm && matchesMonth;
            });

            // Limit 5 unless searching/filtering
            if(term === '' && month === 'all') {
                renderHistory(filtered.slice(0, 5));
            } else {
                renderHistory(filtered); // Show all matches
            }
        };

        searchInput.addEventListener('input', applyFilter);
        monthSelect.addEventListener('change', applyFilter);
    }

    // Modal Detail History
    window.openHistoryDetail = async (judul, dateStr, link, recipientsJson) => {
        document.getElementById('detail-judul').innerText = judul;
        document.getElementById('detail-date').innerText = new Date(dateStr).toLocaleString('id-ID');
        document.getElementById('detail-link').href = link;
        
        const ids = JSON.parse(recipientsJson);
        const container = document.getElementById('detail-recipients');
        container.innerHTML = '<span class="loading loading-spinner loading-sm text-primary mx-auto block"></span>';
        
        document.getElementById('modal_history_detail').showModal();

        // Fetch user details from IDs
        try {
            const res = await postData('/admin/guru/history-recipients', { ids });
            if(res.ok && res.data.data) {
                const users = res.data.data;
                if(users.length === 0) {
                    container.innerHTML = '<p class="text-xs text-gray-400 text-center">Data user tidak ditemukan.</p>';
                } else {
                    container.innerHTML = users.map(u => `
                        <div class="flex items-center gap-2 p-1.5 border-b border-gray-100 last:border-0">
                            <div class="w-6 h-6 rounded-full bg-gray-200 text-gray-500 flex items-center justify-center text-[10px] font-bold">
                                ${u.nama.charAt(0)}
                            </div>
                            <div class="min-w-0">
                                <p class="text-xs font-bold text-gray-700 truncate">${u.nama}</p>
                                <p class="text-[9px] text-gray-400 truncate">${u.email}</p>
                            </div>
                        </div>
                    `).join('');
                }
            }
        } catch(e) {
            container.innerHTML = '<p class="text-xs text-error text-center">Gagal memuat penerima.</p>';
        }
    };

    // --- EXISTING BROADCAST LOGIC (Keep it mostly same, just add fetchHistory call) ---
    async function fetchGurus() {
        const res = await getData('/admin/guru');
        if(res.ok && res.data && res.data.data) {
            allGurus = res.data.data;
            document.getElementById('total-guru-label').innerText = `Total: ${allGurus.length}`;
            renderGuruList(allGurus);
        }
    }

    function renderGuruList(gurus) {
        const container = document.getElementById('list-guru-container');
        if(!container) return;
        if(gurus.length === 0) {
            container.innerHTML = `<div class="text-center py-4 text-gray-400 text-sm">Tidak ditemukan</div>`;
            return;
        }
        container.innerHTML = gurus.map(g => `
            <label class="flex items-center gap-3 p-3 hover:bg-base-200 rounded-lg cursor-pointer transition-colors border border-transparent hover:border-gray-200">
                <input type="checkbox" value="${g.id}" class="checkbox checkbox-sm checkbox-primary guru-checkbox" 
                    ${selectedSet.has(g.id) ? 'checked' : ''} onchange="toggleGuru('${g.id}')" />
                <div class="flex-1">
                    <div class="font-bold text-gray-800 text-sm">${g.nama}</div>
                    <div class="text-xs text-gray-500">${g.email}</div>
                </div>
            </label>
        `).join('');
    }

    window.openRecipientModal = () => {
        const searchInput = document.getElementById('search-guru');
        if(searchInput) searchInput.value = '';
        renderGuruList(allGurus);
        updateCheckAllState();
        document.getElementById('modal_recipient').showModal();
    }

    window.toggleGuru = (id) => {
        if(selectedSet.has(id)) selectedSet.delete(id);
        else selectedSet.add(id);
        updateCheckAllState();
        document.getElementById('btn-count').innerText = selectedSet.size;
    }

    document.getElementById('check-all')?.addEventListener('change', (e) => {
        const isChecked = e.target.checked;
        const visibleGurus = getVisibleGurus();
        visibleGurus.forEach(g => {
            if(isChecked) selectedSet.add(g.id);
            else selectedSet.delete(g.id);
        });
        document.querySelectorAll('.guru-checkbox').forEach(cb => {
            if(visibleGurus.some(g => g.id === cb.value)) cb.checked = isChecked;
        });
        document.getElementById('btn-count').innerText = selectedSet.size;
    });

    function getVisibleGurus() {
        const query = document.getElementById('search-guru').value.toLowerCase();
        return allGurus.filter(g => g.nama.toLowerCase().includes(query) || g.email.toLowerCase().includes(query));
    }

    function updateCheckAllState() {
        const visibleGurus = getVisibleGurus();
        const allSelected = visibleGurus.length > 0 && visibleGurus.every(g => selectedSet.has(g.id));
        document.getElementById('check-all').checked = allSelected;
    }

    document.getElementById('search-guru').addEventListener('input', (e) => {
        const query = e.target.value.toLowerCase();
        const filtered = allGurus.filter(g => g.nama.toLowerCase().includes(query) || g.email.toLowerCase().includes(query));
        renderGuruList(filtered);
        updateCheckAllState();
    });

    window.saveSelection = () => {
        document.getElementById('recipient-count').innerText = `${selectedSet.size} Guru Dipilih`;
        document.getElementById('selected-ids').value = JSON.stringify(Array.from(selectedSet));
        document.getElementById('modal_recipient').close();
        validateForm();
    }

    function setupFileUpload() {
        const input = document.getElementById('file-input');
        input.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if(file) {
                document.getElementById('file-preview-area').classList.add('hidden');
                document.getElementById('file-name-display').classList.remove('hidden');
                document.getElementById('file-name-display').classList.add('flex');
                document.getElementById('file-name-text').innerText = file.name;
                fileSelected = true;
            } else {
                fileSelected = false;
            }
            validateForm();
        });
    }

    function validateForm() {
        const btn = document.getElementById('btn-send');
        if(fileSelected && selectedSet.size > 0) btn.disabled = false;
        else btn.disabled = true;
    }

    document.getElementById('form-broadcast').addEventListener('submit', async (e) => {
        e.preventDefault();
        const total = selectedSet.size;
        const confirm = await window.showConfirm(
            'Kirim Dokumen?', 
            `Anda akan mengirim file kepada <b>${total} guru</b>.`,
            'Ya, Kirim',
            'primary'
        );

        if(!confirm) return;

        const btn = document.getElementById('btn-send');
        const originalText = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = `<span class="loading loading-spinner"></span> Mengirim...`;

        const formData = new FormData(e.target);
        const token = localStorage.getItem('token');

        try {
            const response = await fetch('https://sipotensi-api.vercel.app/api/admin/guru/broadcast-doc', {
                method: 'POST',
                headers: { 'Authorization': `Bearer ${token}` },
                body: formData
            });

            const result = await response.json();

            if(response.ok) {
                alert("Berhasil! " + result.message);
                document.getElementById('form-broadcast').reset();
                selectedSet.clear();
                window.saveSelection(); 
                document.getElementById('file-preview-area').classList.remove('hidden');
                document.getElementById('file-name-display').classList.add('hidden');
                document.getElementById('file-name-display').classList.remove('flex');
                fileSelected = false;
                validateForm();
                
                // UPDATE HISTORY SETELAH KIRIM
                fetchHistory(); 

            } else {
                alert(result.message || "Gagal mengirim dokumen.");
            }

        } catch (error) {
            console.error(error);
            alert("Terjadi kesalahan jaringan.");
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    });

    function setupSearch() {
        document.getElementById('search-guru').addEventListener('input', (e) => {
            const query = e.target.value.toLowerCase();
            const filtered = allGurus.filter(g => 
                g.nama.toLowerCase().includes(query) || 
                g.email.toLowerCase().includes(query)
            );
            renderGuruList(filtered);
            updateCheckAllState();
        });
    }
</script>

<style>
    .animate-fade-in { animation: fadeIn 0.3s ease-out; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>