---
// src/pages/siswa/profile/index.astro
import StudentLayout from '../../../layouts/StudentLayout.astro';
import AlertSystem from '../../../components/ui/AlertSystem.astro';
import Toast from '../../../components/ui/ToastSystem.astro';
---

<StudentLayout title="Profil Saya">
    
    <div class="fixed top-0 inset-x-0 z-30 bg-white/90 backdrop-blur-md border-b border-gray-100 px-4 py-3 max-w-md mx-auto w-full flex items-center gap-3 shadow-sm">
        <a href="/siswa" class="btn btn-circle btn-sm btn-ghost hover:bg-gray-100">
            <i class="fa-solid fa-arrow-left text-gray-600"></i>
        </a>
        <h1 class="text-lg font-bold text-gray-800">Profil Saya</h1>
    </div>

    <div class="pt-20 pb-24 px-5 max-w-md mx-auto min-h-screen bg-gray-50 flex flex-col gap-6">

        <div class="flex flex-col items-center">
            <div class="relative group">
                <div class="w-24 h-24 rounded-full border-4 border-white shadow-lg overflow-hidden bg-gray-200 relative">
                    <img id="profileImage" src="https://ui-avatars.com/api/?name=User" alt="Foto Profil" class="w-full h-full object-cover" />
                    
                    <div id="imageLoading" class="absolute inset-0 bg-black/50 hidden flex-col items-center justify-center text-white z-10">
                        <span class="loading loading-spinner loading-xs"></span>
                    </div>
                </div>

                <button onclick="document.getElementById('fileInput').click()" class="absolute bottom-0 right-0 btn btn-circle btn-xs btn-primary border-2 border-white shadow-md z-20 w-8 h-8 min-h-0">
                    <i class="fa-solid fa-camera text-[10px]"></i>
                </button>
                
                <input type="file" id="fileInput" class="hidden" accept="image/png, image/jpeg, image/jpg" />
            </div>
            
            <h2 id="displayName" class="mt-3 font-bold text-lg text-gray-800">Memuat...</h2>
            <p id="displayClass" class="text-xs text-gray-500 font-medium bg-gray-200 px-3 py-1 rounded-full mt-1">-</p>
        </div>

        <div class="card bg-white shadow-sm border border-gray-100 rounded-xl">
            <div class="card-body p-4 gap-3">
                <div class="flex items-center gap-2 mb-1 border-b border-gray-100 pb-2">
                    <i class="fa-solid fa-id-card text-emerald-500"></i>
                    <h3 class="font-bold text-gray-700 text-xs uppercase tracking-wider">Identitas Siswa</h3>
                </div>

                <div class="form-control">
                    <label class="label pt-0 pb-1">
                        <span class="label-text text-xs text-gray-400 font-bold">Nama Lengkap</span>
                    </label>
                    <input type="text" id="inputNama" class="input input-bordered input-sm bg-gray-50 text-gray-600 font-semibold text-sm" value="-" readonly />
                </div>

                <div class="form-control">
                    <label class="label pt-0 pb-1">
                        <span class="label-text text-xs text-gray-400 font-bold">NISN</span>
                    </label>
                    <input type="text" id="inputNisn" class="input input-bordered input-sm bg-gray-50 text-gray-600 font-mono text-sm" value="-" readonly />
                </div>
            </div>
        </div>

        <div class="card bg-white shadow-sm border border-gray-100 rounded-xl">
            <div class="card-body p-4 gap-3">
                <div class="flex items-center gap-2 mb-1 border-b border-gray-100 pb-2">
                    <i class="fa-solid fa-lock text-emerald-500"></i>
                    <h3 class="font-bold text-gray-700 text-xs uppercase tracking-wider">Keamanan Akun</h3>
                </div>

                <form id="passwordForm" class="flex flex-col gap-3">
                    <div class="form-control">
                        <label class="label pt-0 pb-1">
                            <span class="label-text text-xs text-gray-500 font-bold">Password Baru</span>
                        </label>
                        <div class="relative">
                            <input type="password" name="password" id="newPassword" class="input input-bordered input-sm w-full pr-8 text-sm" placeholder="Min. 6 karakter" required minlength="6"/>
                            <i class="fa-solid fa-eye absolute right-3 top-2.5 text-gray-400 cursor-pointer text-xs" onclick="togglePass('newPassword')"></i>
                        </div>
                    </div>
                    
                    <div class="form-control">
                        <label class="label pt-0 pb-1">
                            <span class="label-text text-xs text-gray-500 font-bold">Ulangi Password</span>
                        </label>
                        <div class="relative">
                            <input type="password" id="confirmPassword" class="input input-bordered input-sm w-full pr-8 text-sm" placeholder="Konfirmasi password" required />
                            <i class="fa-solid fa-eye absolute right-3 top-2.5 text-gray-400 cursor-pointer text-xs" onclick="togglePass('confirmPassword')"></i>
                        </div>
                    </div>

                    <button type="submit" id="btnSavePass" class="btn btn-primary btn-sm w-full text-white mt-2 shadow-sm">
                        <i class="fa-solid fa-key"></i> Simpan Password
                    </button>
                </form>
            </div>
        </div>

        <div class="mt-auto pt-4">
            <button id="btnLogout" class="btn btn-error btn-outline btn-sm w-full gap-2 shadow-sm hover:bg-error hover:text-white transition-all">
                <i class="fa-solid fa-right-from-bracket"></i> Keluar Aplikasi
            </button>
            <p class="text-center text-[10px] text-gray-400 mt-4 font-mono">v1.0.0 StudentApp</p>
        </div>

    </div>

    <AlertSystem />
    <Toast />

</StudentLayout>

<script src="../../../scripts/pages/siswa/profile.js"></script>